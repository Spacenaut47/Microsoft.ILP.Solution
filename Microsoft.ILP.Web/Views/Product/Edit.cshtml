@model Microsoft.ILP.Web.Models.CreateProductViewModel

<h2>Edit Product</h2>

<form asp-action="Edit" asp-route-id="@ViewBag.ProductId" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Description" />
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" type="number" step="0.01" required />
    </div>
    <div>
        <label>Category:</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label>Stock:</label>
        <input asp-for="Stock" type="number" />
    </div>
    <button type="submit">Update</button>
</form>
